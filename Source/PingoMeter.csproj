<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net481</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>Resources\op.ico</ApplicationIcon>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <PublishDir>..\Release\</PublishDir>
    <Optimize>true</Optimize>

    <!-- Assembly metadata for auto-generated AssemblyInfo -->
    <AssemblyTitle>PingoMeter</AssemblyTitle>
    <AssemblyDescription>PingoMeter by Justin Grote</AssemblyDescription>
    <AssemblyCompany>github.com/JustinGrote</AssemblyCompany>
    <AssemblyProduct>PingoMeter</AssemblyProduct>
    <AssemblyCopyright>Copyright Â© Justin Grote 2026</AssemblyCopyright>
    <AssemblyCulture></AssemblyCulture>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="vendor\StartupCreator\StartupViaLink.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\none.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Resources\op.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Resources\op.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="app.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>